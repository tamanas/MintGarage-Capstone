@model HomeModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string homeContent = "homecontent";
    string review = "review";
    string supplier = "supplier";
    var count = 0;
}

<div class="bg-success font-weight-bold text-center text-white">
    <span>@ViewBag.Message</span>
</div>
@if (ViewBag.table == homeContent)
{

    @if (ViewBag.add)
    {
        <div>
            <form asp-action="CreateHomeContent" method="post" enctype="multipart/form-data">
                <div class="container">
                    <div class="row">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="col-sm-2 col-md-2 col-lg-2">
                                <input asp-for="@Model.HomeContent.Title" class="form-control" placeholder="Card Header" />
                            </div>
                            <div class="col-6">
                                <input asp-for="@Model.HomeContent.Description" class="form-control" placeholder="Card Description" />
                            </div>
                            <div class="col-2">
                                <input asp-for="@Model.HomeContent.ImageFile" accept="image/*" placeholder="Card Logo" />
                            </div>
                            <div class="col-2 text-right">
                                
                                    <input type="submit" value="Add" class="btn btn-success btn-sm" />
                                
                                    <a class="btn btn-info btn-sm" asp-action="Update">Cancel</a>
                                
                            </div>

                        </div>
                    </div>
                </div>
            </form>

        </div>
    }

    @if (ViewBag.edit)
    {
        <div>
            <form asp-action="EditHomeContent" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="@Model.HomeContent.HomeContentsID" hidden />
                <div class="form-group">
                    <input asp-for="@Model.HomeContent.Title" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.HomeContent.Description" class="form-control" />
                </div>
                <div class="">
                    <img src="@("~/Images/" + Model.HomeContent.Image)" width="100" height="70" asp-append-version="true" />
                    <input asp-for="@Model.HomeContent.Image" hidden />
                    <input asp-for="@Model.HomeContent.ImageFile" accept="image/*"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-warning" />
                    <a class="btn btn-info" asp-action="Update">Cancel</a>
                </div>
            </form>
        </div>
    }

    @if (ViewBag.delete)
    {
        <div>
            <form asp-action="DeleteHomeContent" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="@Model.HomeContent.HomeContentsID" hidden />
                <div class="form-group">
                    <input asp-for="@Model.HomeContent.Title" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.HomeContent.Description" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <input asp-for="@Model.HomeContent.Image" hidden />
                    <img src="@("~/Images/" + Model.HomeContent.Image)" width="100" height="70" asp-append-version="true" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-info" asp-action="Update">Cancel</a>
                </div>
            </form>
        </div>
    }
}
<div>
    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th></th>
                <td><a asp-action="Update" asp-controller="Home" asp-route-operation="add" asp-route-show=true asp-route-table="homecontent">Add</a></td>
            </tr>
        </thead>
        <tbody>
            @{count = 0;}
            @foreach (var item in Model.HomeContents)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@("~/Images/"+item.Image)" width="100" height="70" asp-append-version="true" /></td>
                    <td><a asp-action="Update" asp-controller="Home" asp-route-id="@item.HomeContentsID" asp-route-operation="edit" asp-route-show=true asp-route-table="homecontent">Edit</a></td>
                    <td><a asp-action="Update" asp-controller="Home" asp-route-id="@item.HomeContentsID" asp-route-operation="delete" asp-route-show=true asp-route-table="homecontent">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

