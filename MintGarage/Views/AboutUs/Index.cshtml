<div class="mt-5 mb-5 text-center">
    <h2>Our Core Values</h2>
    <h6 class="font-weight-bolder">At Mint Garage we believe in transforming spaces to the needs, desires and wants of our clients. Making sure no 2 garages are a like.</h6>
    <div class="row">
        @foreach (Value item in Model.Values)
        {
            <!--Gallary Item-->
            <div class="col-3">
                    <img src="~/Images/@item.ValueImage" alt="@item.ValueImage" class="card-img-top" style="height:100px; width:200px" />
                    <div class="mt-3">
                        <div>
                            <h5><u>@item.ValueTitle</u></h5>
                        </div>
                        <div>
                            <p>@item.ValueDescription</p>
                        </div>
                    </div>
            </div>
            <!--Gallary Item End-->
        }
    </div>
</div>

<div class="mt-5 mb-5 text-center">
    <h2>Meet Our Team</h2>
    <h6 class="font-weight-bolder">Our team consists of highly qualified, experienced and knowledgeable professionals who are dedicated to help our customers in any tranforming or storage projects!</h6>
    <div class="row">
        @foreach (Team team in Model.Teams)
        {
            <div class="column">
                <div class="card">
                    <div class="d-flex align-items-center justify-content-around">
                        <div class=" pt-2 pb-2">
                            <img src="~/Images/@team.MemberImage" alt="@team.MemberImage" style="width:100px">
                        </div>
                        <div class=" pt-2 pb-2">
                            <h4>@team.MemberName</h4>
                            <p class="title">@team.MemberRole</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
