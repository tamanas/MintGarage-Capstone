<div class="container-fluid">
    <div class="px-lg-5">

        <form>

            <input type/>

            <label for="sort">Sort By: </label>
            <select name="sort" id="sort">
                <option value="name_asc"><a asp-action="Index" asp-router-sortOrder="name_asc">Alphabetical  A - Z</a></option>
                <option value="name_desc"><a asp-action="Index" asp-router-sortOrder="name_desc">Alphabetical Z - A</a>Z-A</option>
                <option value="price_asc"><a asp-action="Index" asp-router-sortOrder="price_asc">Highest Price</a></option>
                <option value="price_desc"><a asp-action="Index" asp-router-sortOrder="price_desc">Lowest Price</a></option>
            </select>
            <br><br>

                <select name="filterItem">
                    @foreach (var item in ViewBag.Categories)
                    {
                        <option value="@item.CategoryID">@item.Name</option>
                    }
                </select>

            <input type="submit" value="Submit">
        </form>


        <div class="row" style="height:120px">
            @foreach (Product item in Model)
            {
                <!--Gallary Item-->
                <div class="col-xl-2 col-lg-3 col-md-4 mb-4">
                    <div class="bg-white rounded shadow-sm">
                        <img src="~/Images/@item.ProductImage" alt="@item.ProductImage" class="img-thumbnail card-img-top" style="height:200px; width:300px" />
                        <div class="p-4">
                            <h5><a class="text-dark">@item.ProductName</a></h5>
@*                            <p class="small text-muted mb-0"> @item.ProductDescription</p>
*@                            <p>@item.ProductPrice.ToString("c")</p>
                            <div class="d-flex align-items-center justify-content-between px-3 py-2 mt-4">
                                <div class="btn btn-success px-2 py-1 rounded-pill"> Add to Cart</div>
                                <div class="btn btn-info px-2 py-1 rounded-pill">Details </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Gallary Item End-->

            }

        </div>
    </div>
</div>

