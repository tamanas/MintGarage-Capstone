@model IEnumerable<MintGarage.Models.HomeTab.SocialMedias.SocialMedia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MediaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MediaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaImage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MediaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MediaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MediaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
