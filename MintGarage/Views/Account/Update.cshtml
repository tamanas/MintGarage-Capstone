@model UpdatePassword

@{
    ViewData["Title"] = "Update Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="my-4">
        <h4 class="text-center">Change Password</h4>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="text-center">
                @if (ViewBag.Success != null && ViewBag.Success)
                {
                    <h6 class="text-success">@ViewBag.Message</h6>
                }
                @if (ViewBag.Success != null && !ViewBag.Success)
                {
                    <h6 class="text-danger">@ViewBag.Message</h6>
                }
            </div>
            <form asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="CurrectPassword" class="form-control" placeholder="Current Password..."/>
                    <span asp-validation-for="CurrectPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="NewPassword" class="form-control" placeholder="New Password..."/>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password..."/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success px-3" />
                    <a class="btn btn-info px-2" asp-action="Update">Cancel</a>
                </div>

            </form>
        </div>
    </div>
