@model UpdatePassword

@{
    ViewData["Title"] = "Update Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; 
}


<h3 class="text-center">Change Password</h3>

<div class="row justify-content-xl-center">
    
    <div class="col-md-8">
        <div class="text-center">
            @if (ViewBag.Success != null && ViewBag.Success)
            {
                <h6 class="text-success">@ViewBag.Message</h6>
            }
            @if (ViewBag.Success != null && !ViewBag.Success)
            {
                <h6 class="text-danger">@ViewBag.Message</h6>
            }
        </div>
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrectPassword" class="control-label"></label>
                <label class="text-danger">*</label>
                <input asp-for="CurrectPassword" class="form-control" />
                <span asp-validation-for="CurrectPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <label class="text-danger">*</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <label class="text-danger">*</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-info" asp-action="Update">Cancel</a>
            </div>

        </form>
    </div>
</div>
