@model FooterModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var count = 0;
}

<div class="bg-success font-weight-bold text-center text-white">
    <span>@ViewBag.Message</span>
</div>

<div class="bg-dark text-white text-center font-weight-bold mt-5 mb-2">
    <p class="h3 p-1">Contact Information</p>
</div>

@if (ViewBag.contactEdit)
{
    <div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="mt-2 mb-2">
        <form asp-action="EditFooterContactInfo" method="post">
            <input asp-for="@Model.ContactInfo.ContactInfoID" hidden />
            <div class="row">
                <div class="col-4">
                    <input asp-for="@Model.ContactInfo.PhoneNumber" class="form-control" placeholder="Phone Number" />
                </div>
                <div class="col-6">
                    <input asp-for="@Model.ContactInfo.EmailAddress" class="form-control" placeholder="Email" />
                </div>
                <div class="col-2">
                    <input type="submit" value="Edit" class="btn btn-warning" />
                    <a class="btn btn-info" asp-action="Update">Cancel</a>
                </div>
            </div>
        </form>
    </div>
}

<div>
    <span>@ViewBag.contactInfoMessage</span>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-1">No.</th>
                <th class="col-4">Phone Number</th>
                <th class="col-6">Email Address</th>
                <th class="col-1"></th>
            </tr>
        </thead>
        <tbody>
            @{count = 0;}
            @foreach (var item in Model.ContactInfos)
            {
                count++;
                <tr>
                    <th class="col-1">@count</th>
                    <td class="col-4">@item.PhoneNumber</td>
                    <td class="col-6">@item.EmailAddress</td>
                    <td class="col-1"><a asp-action="Update" asp-controller="Footer" asp-route-id="@item.ContactInfoID" asp-route-operation="contactEdit" asp-route-show=true>Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="bg-dark text-white text-center font-weight-bold mt-5 mb-2">
    <p class="h3 p-1">Social Media</p>
</div>

<div>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>

@if (ViewBag.add)
{
    <div class="mt-2 mb-2">
        <form asp-action="AddSocialMedia" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-2">
                    <input asp-for="@Model.SocialMedia.Name" class="form-control" placeholder="Name" />
                </div>
                <div class="col-4">
                    <input asp-for="@Model.SocialMedia.SocialMediaUrl" class="form-control" placeholder="URL"/>
                </div>
                <div class="col-4">
                    <input asp-for="@Model.SocialMedia.ImageFile" accept="image/*"/>
                </div>
                <div class="col-2">
                    <input type="submit" value="Add" class="btn btn-success" />
                    <a class="btn btn-info" asp-action="Update">Cancel</a>
                </div>
            </div>
        </form>
    </div>
}

@if (ViewBag.edit)
{
    <div class="mt-2 mb-2">
        <form asp-action="EditSocialMedia" method="post" enctype="multipart/form-data">
            <input asp-for="@Model.SocialMedia.SocialMediaID" hidden />
            <div class="row">
                <div class="col-2">
                    <input asp-for="@Model.SocialMedia.Name" class="form-control" placeholder="Social Media Name" />
                </div>
                <div class="col-4">
                    <input asp-for="@Model.SocialMedia.SocialMediaUrl" class="form-control" placeholder="Social Media URL" />
                </div>
                <div class="col-4">
                    <img src="@("~/Images/" + Model.SocialMedia.SocialMediaLogo)" width="100" height="70" asp-append-version="true" />
                    <input asp-for="@Model.SocialMedia.SocialMediaLogo" hidden />
                    <input asp-for="@Model.SocialMedia.ImageFile" accept="image/*" />
                </div>
                <div class="col-2">
                    <input type="submit" value="Edit" class="btn btn-warning" />
                    <a class="btn btn-info" asp-action="Update">Cancel</a>
                </div>
            </div>
        </form>
    </div>
}

@if (ViewBag.delete)
{
    <div>
        <form asp-action="DeleteSocialMedia" method="post">
            <input asp-for="@Model.SocialMedia.SocialMediaID" hidden />
            <div class="row">
                <div class="col-2">
                    <input asp-for="@Model.SocialMedia.Name" class="form-control" readonly />
                </div>
                <div class="col-4">
                    <input asp-for="@Model.SocialMedia.SocialMediaUrl" class="form-control" readonly />
                </div>
                <div class="col-4">
                    <input asp-for="@Model.SocialMedia.SocialMediaLogo" hidden />
                    <img src="@("~/Images/" + Model.SocialMedia.SocialMediaLogo)" width="100" height="70" asp-append-version="true" />
                </div>
                <div class="col-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-info" asp-action="Update">Cancel</a>
                </div>
            </div>

        </form>
    </div>
}

<div class="mt-3 mb-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-1">No.</th>
                <th class="col-2">Social Media Name</th>
                <th class="col-5">Social Media URL</th>
                <th class="col-2">Social Media Logo</th>
                <th class="col-1"></th>
                <th class="col-1"><a asp-action="Update" asp-controller="Footer" asp-route-operation="add" asp-route-show=true>Add</a></th>
            </tr>
        </thead>
        <tbody>
            @{count = 0;}
            @foreach (var item in Model.SocialMedias)
            {
                count++;
                <tr>
                    <th class="col-1">@count</th>
                    <td class="col-2">@item.Name</td>
                    <td class="col-5">@item.SocialMediaUrl</td>
                    <td class="col-2"><img src="@("~/Images/"+item.SocialMediaLogo)" width="100" height="70" asp-append-version="true" /></td>
                    <td class="col-1"><a asp-action="Update" asp-controller="Footer" asp-route-id="@item.SocialMediaID" asp-route-operation="edit" asp-route-show=true>Edit</a></td>
                    <td class="col-1"><a asp-action="Update" asp-controller="Footer" asp-route-id="@item.SocialMediaID" asp-route-operation="delete" asp-route-show=true>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>