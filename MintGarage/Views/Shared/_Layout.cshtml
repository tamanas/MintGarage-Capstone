<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MintGarage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/icons">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/gallery.css" />
    <link rel="stylesheet" href="~/css/partnersDropdown.css" />
    <script src="~/js/_layout.js"></script>
    <script src="~/js/gallery.js"></script>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand text-white font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Mint Garage</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class=" nav-link text-white font-weight-bold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class=" nav-link text-white font-weight-bold" asp-controller="ConsultationForms" asp-action="Create">Consultation</a>
                        </li>
                        <li class="nav-item">
                            <a class=" nav-link text-white font-weight-bold" asp-controller="Gallery" asp-action="Index">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class=" nav-link text-white font-weight-bold" asp-controller="AboutUs" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white font-weight-bold dropdown-toggle" data-toggle="dropdown" asp-controller="Partners" asp-action="Index">Partners<b class="caret"></b></a>
                            <ul id="partners-dropdown" class="dropdown-menu">
                                @foreach (var partner in ViewBag.Partners)
                                {
                                    <li class="partner-list-item"><a href=@partner.PartnerUrl>@partner.PartnerName</a></li>
                                }
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        @RenderSection("sidemenu", false)
    </header>
    <br />
    <div class="container mb-5 pt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-success text-white mb-0 footer fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <img src="~/Images/mintlogo.png" alt="Mint Logo" />
                    <p class="text-justify">@ViewBag.AboutData</p>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Links</h6>
                    <ul class="footer-links">
                        <li><a asp-controller="ConsultationForms" asp-action="Create">Consultation</a></li>
                        <li><a asp-controller="Product" asp-action="Index">Products</a></li>
                        <li><a asp-controller="Portfolio" asp-action="Index">Portfolio</a></li>
                        <li><a asp-controller="AboutUs" asp-action="Index">About Us</a></li>
                    </ul>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Contact Information</h6>
                    <ul class="footer-links">
                        @foreach (var social in ViewBag.SocialMedias)
                        {
                            <li><a href="@social.SocialMediaUrl">@social.Name</a></li>
                        }
                        @foreach (var contact in ViewBag.Contacts)
                        {
                            <li>@contact.EmailAddress</li>
                            <li>@contact.PhoneNumber</li>
                        }
                    </ul>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <div>
                    Copyright &copy; 2010 - 2021   |   Mint Garage Inc.   |   All Rights Reserved   |   Powered by
                    <a href="https://safeguardhosting.ca/">SafeGuard Hosting</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>initComparisons();</script>
</body>
</html>
