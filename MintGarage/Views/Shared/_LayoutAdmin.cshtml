@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>

        .sidenav {
            height: 100%;
            width: 170px;
            position: fixed;
            z-index: 1;
            top: 55px;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 20px;
        }

            .sidenav a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 170px; /* Same as the width of the sidenav */
            font-size: 20px; /* Increased text to enable scrolling */
            padding: 0px 10px;
        }
    </style>
</head>

<body>
    <div class="sidenav bg-success">
        <a class=" nav-link text-white font-weight-bold" asp-controller="Home" asp-action="Index">Home</a>
        <a class=" nav-link text-white font-weight-bold" asp-controller="ConsultationForms" asp-action="Create">Consultation Forms</a>
        <a class=" nav-link text-white font-weight-bold" asp-controller="Product" asp-action="Index">Products</a>
        <a class=" nav-link text-white font-weight-bold" asp-controller="Portfolio" asp-action="Index">Portfolio</a>
        <a class=" nav-link text-white font-weight-bold" asp-controller="AboutUs" asp-action="Index">About Us</a>
        <a class=" nav-link text-white font-weight-bold" asp-controller="AboutUs" asp-action="Index">Change Password</a>
        <a class=" nav-link text-white font-weight-bold" asp-controller="AdminView" asp-action="Index">Logout</a>
    </div>
    @RenderBody()

</body>

</html>

